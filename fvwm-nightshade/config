AddToFunc   FuncFvwmLayoutMenu
+ I DestroyMenu FvwmLayoutMenu
+ I AddToMenu FvwmLayoutMenu "$[gt.Layouts]" Title
+ I AddToMenu FvwmLayoutMenu DynamicPopupAction FuncFvwmLayoutMenu
+ I PipeRead 'for i in `ls -Fh $FNS_SYSTEMDIR/layouts/ | grep -v /$`; \
  do echo AddToMenu FvwmLayoutMenu "${i}%layout2.svg:$[infostore.MenuIconSize]%" FuncChangeLayout $[FNS_SYSTEMDIR] $i; done'
+ I PipeRead 'for i in `ls -Fh $FVWM_USERDIR/layouts/ | grep -v /$`; \
  do echo AddToMenu FvwmLayoutMenu "${i}%layout2.svg:$[infostore.MenuIconSize]%" FuncChangeLayout $[FVWM_USERDIR] $i; done'

