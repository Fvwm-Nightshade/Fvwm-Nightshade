    Type			ItemDraw
    Position		10 385
    Size 			405 20
    Title			{}
    Flags 			NoReliefString Left
End

# Clear button
Widget 17
Property
	Type 		PushButton
	LocaleTitle {Clear}
	Size 		80 25
	Position 	19 410
	Flags 		NoReliefString
Main
Case message of
	SingleClic :
	Begin
		Set $Message = {false}
		If $PlaylistEntries <> {} Then
		Begin
			Set $PlaylistEntries = {}
			Set $PlaylistEntries_BT = {}
			Set $PlaylistEntriesFull = {}
			ChangeTitle 13 $PlaylistEntries
			ChangeLocaleTitle 12 {Playlist*:}
			Set $Playlist_changed = {true}
			
			ChangeLocaleTitle 16 {Playlist cleared}
			Set $Message = {true}
		End
		Set $chosenNewEntry = {}
		Set $chosenNewEntryFull = {}
		Set $chosenPLEntry = {}
		Set $chosenPLEntryFull = {}
	End
End


