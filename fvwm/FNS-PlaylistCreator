	LocaleTitle {...}
	Size		40 25
	Position	365 20
	Flags		NoReliefString
Main
Case message of
	SingleClic :
	Begin
		Set $Cmd = {FNS-FileBrowser }$lastPLDir{ -b -c}
		Set $id = (LaunchScript $Cmd)
		Set $getPlaylistPath = {true}
	End
End

